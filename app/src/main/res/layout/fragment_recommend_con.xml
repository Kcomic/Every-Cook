<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controller.Fragment.RecommendConFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เลือกวัตถุดิบที่คุณต้องการ (ต่อ)"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#727272"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="วัตถุดิบที่แนะนำ"
        android:layout_marginTop="25dp"
        android:textSize="15dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recommend1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="แง่ว"
            android:layout_margin="20dp"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/recommend2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="แง่ว"
            android:layout_margin="20dp"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/recommend3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="แง่ว"
            android:layout_margin="20dp"
            android:textSize="13dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/materialListCon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="300dp"
        android:layout_width="match_parent" />
    <LinearLayout
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginLeft="10dp"
            />
        <Button
            android:id="@+id/okButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_marginLeft="90dp"
            />
    </LinearLayout>
</LinearLayout>